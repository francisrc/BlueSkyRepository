<dxt:DXWindow x:Class="AnalyticsUnlimited.Client.Interfaces.Commands.BaseOptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        dxt:ThemeManager.ThemeName="Office2007Black"
        Title="BaseOptionsWindow" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Name="Host"></Canvas>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Name="Ok" Margin="5" Width="100" Height="30" Click="Ok_Click">OK</Button>
            <Button Name="Cancel" Margin="5" Width="100" Height="30" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</dxt:DXWindow>
