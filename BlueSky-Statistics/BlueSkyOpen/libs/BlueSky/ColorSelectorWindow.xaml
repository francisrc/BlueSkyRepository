<Window x:Class="BlueSky.ColorSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Selector Window" 
        xmlns:my="clr-namespace:BSky.Controls.Controls;assembly=BSky.Controls" 
        mc:Ignorable="d" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        d:DesignHeight="150" d:DesignWidth="344" 
        SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Name="maingrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Margin="0,125,0,0" >
            <Button Name="ok" Margin="5" Width="50" Click="ok_Click">Ok</Button>
            <Button Name="cancel" Margin="5" Width="50" Click="cancel_Click">Cancel</Button>
        </StackPanel>
        <my:BSkySimpleColorPicker HorizontalAlignment="Left" Margin="10,10,0,0" Name="SimpleColorPicker" VerticalAlignment="Top" />
    </Grid>
</Window>
