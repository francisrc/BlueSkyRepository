<Window x:Class="BlueSky.Commands.Tools.Package.Dialogs.InstallRequiredPackagesFromZip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Install Packages From Folder" Height="150" Width="460" ResizeMode="NoResize">
    <Grid>

        <TextBlock Height="20" HorizontalAlignment="Left" Margin="12,12,0,0" Name="textBlock1" Text="Click 'Browse' and locate your folder that contains R package zip files." VerticalAlignment="Top" Width="400" />
        <TextBox Height="22" HorizontalAlignment="Left" Margin="11,33,0,0" Name="pathTextBox" VerticalAlignment="Top" Width="346" />
        <Button Content="Browse" Height="22" HorizontalAlignment="Left" Margin="363,32,0,0" Name="browse_button" VerticalAlignment="Top" Width="65" Click="browse_button_Click"/>
        <TextBlock Margin="11,57,81,36">NOTE: All the zipped files in the folder must be R packages.</TextBlock>
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="12,83,0,0" Name="ok_button" VerticalAlignment="Top" Width="46" Click="ok_button_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="70,83,0,0" Name="cancel_button" VerticalAlignment="Top" Width="47" Click="cancel_button_Click"/>
    </Grid>
</Window>
