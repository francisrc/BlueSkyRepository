<Window x:Class="BlueSky.Windows.MenuAboveBelowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dragged Item Location Dialog." Height="186" Width="392" ResizeMode="NoResize">
    <Grid Height="135" Background="Lavender">
        <RadioButton Content="Above Target" Height="16" HorizontalAlignment="Left" Margin="14,59,0,0" Name="radioAbove" VerticalAlignment="Top" />
        <RadioButton Content="Below Target" Height="16" HorizontalAlignment="Left" Margin="14,83,0,0" Name="radiodBelow" VerticalAlignment="Top" IsChecked="True" />
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="234,100,0,0" Name="okBut" VerticalAlignment="Top" Width="50" Click="okBut_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="309,100,0,0" Name="CancelBut" VerticalAlignment="Top" Width="50" Click="CancelBut_Click" />
        <TextBlock Height="41" HorizontalAlignment="Left" Margin="14,9,0,0" Name="message" Text="Where in target would you like to place your dragged item?" VerticalAlignment="Top" FontSize="12" FontWeight="Bold" TextWrapping="Wrap" Width="344" />
    </Grid>
</Window>
